<textarea rows=10 cols=100 name='hosts' id='custsql_input'><%= sql %></textarea><BR><input type="button" id="custsql_button" value="exec"/> <input type="button" id="custsql_save" value="save SQL"><BR><BR>
<% if(typeof items == "undefined" && typeof error != "") { %> no sql given 
<% } else { %>
	<% if(error != "") { %>
		<%== error %>
	<% } else { %>
		<table>
			<thead>
				<tr>
				<% for(var num=0;num<head.length;num++){ %>
				<th><%== head[num] %></th>
				<% } %>
				</tr>
			</thead>
			<tbody>
			<% count = 0  %>
			<% for(var row=0;row<items.length; row++){ %>
				<tr>
				<% for ( var col=0; col<head.length; col++ ){ %>
				<td><%== items[row][head[col]] %></td>
				<% } %>
				</tr>
				<% count++ %>
			<% } %>
			</tbody>
		</table>
	<% } %>
<% } %>